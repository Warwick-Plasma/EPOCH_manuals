@article{Ridgers,
title = {Modelling gamma-ray photon emission and pair production in high-intensity laser–matter interactions},
journal = {J. Comput. Phys.},
volume = {260},
pages = {273 - 285},
year = {2014},
issn = {0021-9991},
doi = {http://dx.doi.org/10.1016/j.jcp.2013.12.007},
author = {C.P. Ridgers and J.G. Kirk and R. Duclous and T.G. Blackburn and C.S. Brady and K. Bennett and T.D. Arber and A.R. Bell},
abstract = {Abstract In high-intensity ( &gt; 10 21 W cm − 2 ) laser–matter interactions gamma-ray photon emission by the electrons can strongly affect the electronʼs dynamics and copious numbers of electron–positron pairs can be produced by the emitted photons. We show how these processes can be included in simulations by coupling a Monte Carlo algorithm describing the emission to a particle-in-cell code. The Monte Carlo algorithm includes quantum corrections to the photon emission, which we show must be included if the pair production rate is to be correctly determined. The accuracy, convergence and energy conservation properties of the Monte Carlo algorithm are analysed in simple test problems.},
}
